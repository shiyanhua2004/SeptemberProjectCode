package edu.sdccd.cisc191.SeptemberProgram;

import javafx.application.Application;
import javafx.geometry.HPos;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;


public class Login extends Application
{
    @Override
    public void start(Stage stage) throws Exception {
        GridPane gridPane = new GridPane();
        gridPane.setPadding(new Insets(20, 20, 60, 60));
        gridPane.setHgap(15); gridPane.setVgap(5);

        Scene scene = new Scene(gridPane, 580, 200);


        Label lbHint = new Label("Please enter the following information " +
                "  (Hint: Case sensitive)" );
        GridPane.setHalignment(lbHint, HPos.LEFT);

        //LastName
        Label lbLast = new Label("Lastname");
        GridPane.setHalignment(lbLast, HPos.LEFT);
        TextField tfLast = new TextField();

        //"Firstname
        Label lbFirst = new Label("Firstname:");
        GridPane.setHalignment(lbFirst, HPos.LEFT);
        TextField tfFirst = new TextField();

        Label lbEmail = new Label("Email:");
        GridPane.setHalignment(lbEmail, HPos.LEFT);
        TextField tfEmail = new TextField();

        Button btLogin = new Button("Login");
        GridPane.setMargin(btLogin, new Insets(10, 0, 0, 0));


        gridPane.add(lbHint, 1, 0);
        gridPane.add(lbLast, 0, 2);
        gridPane.add(tfLast, 1, 2);
        gridPane.add(lbFirst, 0, 3);
        gridPane.add(tfFirst, 1, 3);
        gridPane.add(lbEmail, 0, 4);
        gridPane.add(tfEmail, 1, 4);
        gridPane.add(btLogin, 1, 5);


        stage.setTitle("Bank System");
        stage.setScene(scene);
        stage.show();
    }

    public static void main(String[] args)
    {   Application.launch(args);   }
}
